  <div class="container-fluid">
    <header class="border-bottom lh-1 py-3">
      <div class="row flex-nowrap justify-content-center align-items-center">
        <div class="col-4 text-center">
          <a
            class="blog-header-logo text-body-emphasis text-decoration-none"
            href="#"
            >Info1</a
          >
        </div>
      </div>
    </header>
    <div class="nav-scroller py-1 mb-3 border-bottom">
      <nav class="nav nav-underline justify-content-between">
        <a class="nav-item nav-link link-body-emphasis active" href="#">Home</a>
        <a class="nav-item nav-link link-body-emphasis" href="/getRacesByYear">Races</a>
        <a class="nav-item nav-link link-body-emphasis" href="/getDriversByYear">Drivers</a>
        <a class="nav-item nav-link link-body-emphasis" href="/gallery">Gallery</a>
      </nav>
    </div>
  </div>
  <main class="container-fluid">
    <% year = year || 2025; %>
    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-dark">
      <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
          <h1 class="display-4 fst-italic">Fórmula 1</h1>
          <p class="lead my-3">Explora todas las carreras de la temporada seleccionada.</p>
        </div>
      </div>
      <div class="row races-info">
        <div class="col-md-12">
          <!-- Year Selection -->
          <section class="year-selection card bg-secondary text-light mb-4">
            <div class="card-body">
              <h2 class="card-title">Seleccionar Año</h2>
              <select id="yearSelect" class="form-select" onchange="getDriversByYear(this.value)">
                <% for(let y = 1975; y <= 2025; y++) { %>
                  <option value="<%= y %>" <% if(y == year) { %>selected<% } %>><%= y %></option>
                <% } %>
              </select>
            </div>
          </section>

            <section class="drivers-list card bg-secondary text-light">
                <div class="card-body">
                    <h2 class="card-title">Pilotos del Año <%= year %></h2>
                    <% if (!infoAllYearDriversByYear || !infoAllYearDriversByYear.success || infoAllYearDriversByYear.drivers.length === 0) { %>
                    <p class="error">No se encontraron datos de pilotos para este año</p>
                    <% } else { %>
                    <div class="list-group">
                        <% infoAllYearDriversByYear.drivers.forEach(function(driver) { %>
                        <a href="/driverDetails/?year=<%= year %>&driverId=<%= driver.driverId %>" data-driver-id="<%= driver.driverId %>" class="list-group-item list-group-item-action">
                            <h5><%= driver.name %> <%= driver.surname %> (<%= driver.shortName %>)</h5>
                            <p><strong>Número:</strong> <%= driver.number || 'No disponible' %></p>
                            <p><strong>Nacionalidad:</strong> <%= driver.nationality || 'No disponible' %></p>
                            <p><strong>Fecha de Nacimiento:</strong> <%= driver.birthday || 'No disponible' %></p>
                            <p><strong>Equipo:</strong> <%= driver.teamId || 'No disponible' %></p>
                        </a>
                        <% }); %>
                    </div>
                    <% } %>
                </div>
            </section>
        </div>
        <div class="col-12 text-center mt-3">
          <p class="lead mb-0">
            <a href="/logout" class="text-danger fw-bold">Cerrar sesión</a>
          </p>
        </div>
      </div>
    </div>
  </main>

  <script>
    function getDriversByYear(year) {
      // Use provided year or default to current year
      const selectedYear = year && !isNaN(parseInt(year, 10)) ? parseInt(year, 10) : new Date().getFullYear();
      window.location.href = `/getDriversByYear?year=${selectedYear}`;
    }
    </script>
