  <main class="container-fluid">
    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-dark">
      <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
          <h1 class="display-4 fst-italic">Galería de Fórmula 1</h1>
          <p class="lead my-3">Explora fotografías de la temporada de Fórmula 1.</p>
        </div>
      </div>
      <div class="row gallery-info">
        <div class="col-md-12">
          <!-- Filters Section -->
          <section class="filters card bg-secondary text-light mb-4">
            <div class="card-body">
              <h2 class="card-title">Filtros</h2>
              <form id="galleryFilterForm" method="GET" action="/galleryPage">
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label for="yearSelect" class="form-label">Año</label>
                    <select id="yearSelect" name="year" class="form-select">
                      <% for(let y = 1975; y <= 2025; y++) { %>
                        <option value="<%= y %>" <% if(y == 2025) { %>selected<% } %>><%= y %></option>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="teamSelect" class="form-label">Equipo/Escudería</label>
                    <select id="teamSelect" name="team" class="form-select">
                      <option value="">Todas</option>
                      <option value="mclaren">McLaren</option>
                      <option value="ferrari">Ferrari</option>
                      <option value="red_bull">Red Bull</option>
                      <option value="mercedes">Mercedes</option>
                      <option value="aston_martin">Aston Martin</option>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="raceSelect" class="form-label">Carrera</label>
                    <select id="raceSelect" name="race" class="form-select">
                      <option value="">Todas</option>
                      <option value="monaco">Gran Premio de Mónaco</option>
                      <option value="italy">Gran Premio de Italia</option>
                      <option value="silverstone">Gran Premio de Gran Bretaña</option>
                      <option value="monza">Gran Premio de Monza</option>
                      <option value="spa">Gran Premio de Bélgica</option>
                    </select>
                  </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-danger">Buscar</button>
                </div>
              </form>
            </div>
          </section>

          <!-- Gallery Section -->
          <section class="gallery-list card bg-secondary text-light">
            <div class="card-body">
              <h2 class="card-title">Fotografías</h2>
              <% if (!inforGalleryPage || !inforGalleryPage.success || !inforGalleryPage.gallery || inforGalleryPage.gallery.length === 0) { %>
                <p class="error">No se encontraron fotografías</p>
              <% } else { %>
                <div class="row">
                  <% inforGalleryPage.gallery.forEach(function(image) { %>
                    <div class="col-md-4 col-sm-6 mb-4">
                      <div class="card h-100">
                        <img src="<%= image.url %>" class="card-img-top img-fluid" alt="<%= image.alt %>" style="height: 250px; object-fit: cover;">
                        <div class="card-footer bg-transparent border-0 text-center text-muted small pt-1">
                          <a href="<%= image.photographerUrl %>" target="_blank" class="text-muted text-decoration-none"><%= image.photographer %></a>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } %>
            </div>
          </section>
        </div>
        <div class="col-12 text-center mt-3">
          <p class="lead mb-0">
            <a href="/logout" class="text-danger fw-bold">Cerrar sesión</a>
          </p>
        </div>
      </div>
